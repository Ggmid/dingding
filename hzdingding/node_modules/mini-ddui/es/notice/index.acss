.am-notice {
    position: relative;
    background-color: #fefceb;
    height: 36px;
    overflow: hidden;
    font-size: 13px;
    color: #f76a24;
    display: flex;
    align-items: center
}

.am-notice-content {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-left: 15px;
    margin-right: 15px;
    padding-left: 25px
}

.am-notice-content:before {
    position: absolute;
    top: 0;
    left: 15px;
    content: "";
    display: inline-block;
    width: 18px;
    height: 36px;
    background: url("data:image/png;base64,") center no-repeat;
    background-size: 18px auto
}

.am-notice-operation {
    padding: 8px 0
}

.am-notice-link {
    display: block;
    height: 100%;
    margin: auto 15px;
    color: #f85800;
}

.am-notice-link:after {
    content: "";
    display: inline-block;
    width: 6px;
    height: 6px;
    border: 1px solid #f76a24;
    border-top: 0 none;
    border-left: 0 none;
    margin-left: 6px;
    margin-right: 2px;
    margin-bottom: 1px;
    transform: rotate(315deg)
}

.am-notice-closable {
    display: inline-block;
    width: 12px;
    height: 1px;
    background: #f76a24;
    transform: rotate(45deg);
    display: block;
    height: 100%;
    margin: auto 15px
}

.am-notice-closable:after {
    content: '';
    display: block;
    width: 12px;
    height: 1px;
    background: #f76a24;
    transform: rotate(-90deg)
}

.am-notice-operation-text {
    display: block;
    height: 100%;
    margin: auto 15px
}